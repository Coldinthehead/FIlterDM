<UserControl
    x:Class="FilterDM.Views.EditPage.EditorPanelView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:FilterDM.ViewModels.EditPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:EditorPanelViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:EditorPanelViewModel />
    </Design.DataContext>

    <TabControl
        AutoScrollToSelectedItem="True"
        ItemsSource="{Binding Items}"
        SelectedItem="{Binding SelectedItem}"
        Theme="{StaticResource ScrollableTabControl}">

        <TabControl.ItemTemplate>
            <DataTemplate x:DataType="vm:EditorBaseViewModel">
                <StackPanel Margin="8,4" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        Classes="body1"
                        Text="{Binding Content.Title, Mode=TwoWay}" />
                    <Button
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Classes="Icon"
                        Command="{Binding CloseMeCommand}">
                        <Button.Content>
                            <materialIcons:MaterialIcon
                                Width="24"
                                Height="24"
                                Foreground="{DynamicResource MaterialPrimaryMidBrush}"
                                Kind="CloseCircleOutline" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </DataTemplate>
        </TabControl.ItemTemplate>

        <TabControl.ContentTemplate>
            <DataTemplate x:DataType="vm:EditorBaseViewModel">
                <ContentControl Content="{Binding Content}" />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>

</UserControl>
